# Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_EMBEDDINGS_MODEL=llama-text-embed-v2
PINECONE_INDEX_NAME=your_index_name

# YOLO Model Configuration
YOLO_MODEL_PATH=https://hub.ultralytics.com/models/6y8UOPC2UfMyoSlxNI28

# Directory Paths (adjust for your system)
INPUT_VIDEOS_PATH=./input_videos
OUTPUT_SNAPSHOTS_PATH=./output_snapshots

# Processing Configuration
SNAPSHOT_INTERVAL=1
SCREENSHOT_INTERVAL=15
CONFIDENCE_THRESHOLD=0.5

# FastImageCaptioner settings
FAST_CAPTIONER_MODEL=Salesforce/blip-image-captioning-base

# Ollama settings (if using)
OLLAMA_API_URL=http://localhost:11434/api/generate
OLLAMA_MODEL=llava
OLLAMA_TEMPERATURE=0.7
